# Application
APP_NAME=BotoChain
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://yourdomain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

# Database (Digital Ocean Managed Database recommended)
DB_CONNECTION=mysql
DB_HOST=your-db-host.db.ondigitalocean.com
DB_PORT=25060
DB_DATABASE=botochain
DB_USERNAME=doadmin
DB_PASSWORD=your_secure_db_password

# Cache & Queue
CACHE_STORE=redis
CACHE_PREFIX=

QUEUE_CONNECTION=database
BROADCAST_CONNECTION=reverb
FILESYSTEM_DISK=local

# Redis (if using Digital Ocean Redis)
REDIS_HOST=your-redis-host.db.ondigitalocean.com
REDIS_PASSWORD=your_redis_password
REDIS_PORT=25061
REDIS_CLIENT=phpredis

MEMCACHED_HOST=127.0.0.1

# Mail (Configure a production mail service)
# Recommended: Mailgun (free tier), SendGrid, or AWS SES
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=your_mail_username
MAIL_PASSWORD=your_mail_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME=BotoChain

# Laravel Reverb (WebSocket)
REVERB_APP_ID=your-app-id
REVERB_APP_KEY=your-app-key
REVERB_APP_SECRET=your-app-secret
REVERB_HOST=yourdomain.com
REVERB_PORT=6001
REVERB_SCHEME=https

# Vite (for WebSocket client)
VITE_APP_NAME="${APP_NAME}"
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# AWS / S3 (Optional - for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Logging
LOG_CHANNEL=daily
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# Session
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Performance
BCRYPT_ROUNDS=12

# Real-time Results
REALTIME_RESULTS_INTERVAL_SECONDS=5